@using Context.Models;
@model Socks
@{
    ViewData["Title"] = "Add Sneaker";
}

<body>
    <form method="post" asp-action="Create">
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" type="text" class="form-control" placeholder="Enter Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Size">Size</label>
            <input asp-for="Size" type="number" class="form-control" placeholder="Size">
            <span asp-validation-for="Size" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <label asp-for="Cost">Cost</label>
            <input asp-for="Cost" type="number" class="form-control" placeholder="Cost">
            <span asp-validation-for="Cost" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <label asp-for="Count">Count</label>
            <input asp-for="Count" type="number" class="form-control" placeholder="Count">
            <span asp-validation-for="Count" class="text-danger"></span>
        </div>
        <br />

        <br />
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</body>